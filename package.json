{
  "name": "gses-test-task",
  "version": "1.0.0",
  "description": "Cryptocurrency rate wrapper service",
  "type": "module",
  "main": "src/app.ts",
  "engines": {
    "node": ">=16 <17",
    "npm": ">=7 <9"
  },
  "scripts": {
    "lint:fs": "ls-lint",
    "start:dev": "nodemon --exec ts-node -r tsconfig-paths/register ./src/app.ts",
    "start": "node ./build/app.js",
    "lint:js": "cd gses-app && npm run lint:js",
    "lint": "npm run lint:fs && npm run lint:js",
    "clean": "rimraf build",
    "build": "npm run clean && tsc && tsc-alias -p tsconfig.json",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest"
  },
  "author": "Volodymyr Minchenko",
  "license": "ISC",
  "devDependencies": {
    "@ls-lint/ls-lint": "1.11.2",
    "@typescript-eslint/eslint-plugin": "5.30.7",
    "eslint": "8.20.0",
    "eslint-plugin-import": "2.26.0",
    "lint-staged": "13.0.3",
    "simple-git-hooks": "2.8.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
